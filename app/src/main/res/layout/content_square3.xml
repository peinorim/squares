<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.SquareActivity"
    tools:showIn="@layout/app_bar_square">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|center_vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="10sp">

        <RelativeLayout
            android:id="@+id/LL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/LLD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/LLD1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/SumDResult1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="160sp"
                        android:layout_marginRight="160sp"
                        android:gravity="center"
                        android:hint="D1"
                        android:padding="5dp"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/SumDResult2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30sp"
                        android:layout_marginStart="30sp"
                        android:gravity="center"
                        android:hint="D2"
                        android:padding="5dp"
                        android:textSize="19sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/square"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/LLD"
                android:gravity="center">

                <TableLayout
                    android:id="@+id/tabsq33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10sp"
                    android:paddingLeft="55sp"
                    android:paddingTop="1dp">

                    <TableRow
                        android:id="@+id/tableRow11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <EditText
                            android:id="@+id/et11"
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            android:background="@drawable/square"
                            android:focusableInTouchMode="true"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="3"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/square_text_size"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et12"
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            android:background="@drawable/square"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="3"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/square_text_size"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et13"
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            android:background="@drawable/square"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="3"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/square_text_size"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <EditText
                            android:id="@+id/et21"
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            android:background="@drawable/square"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="3"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/square_text_size"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et22"
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            android:background="@drawable/square"
                            android:gravity="center"
                            android:inputType="number"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/square_text_size"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et23"
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            android:background="@drawable/square"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="3"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/square_text_size"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow31"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <EditText
                            android:id="@+id/et31"
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            android:background="@drawable/square"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="3"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/square_text_size"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et32"
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            android:background="@drawable/square"
                            android:gravity="center"
                            android:inputType="number"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/square_text_size"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et33"
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            android:background="@drawable/square"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="3"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/square_text_size"
                            android:textStyle="bold" />
                    </TableRow>
                </TableLayout>

                <RelativeLayout
                    android:id="@+id/SumContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tabsq33">

                    <TextView
                        android:id="@+id/SumXResult1"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:layout_marginLeft="@dimen/margin_sum"
                        android:layout_marginTop="15sp"
                        android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
                        android:gravity="center"
                        android:hint="H1"
                        android:textColor="@color/grey_darken2"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/SumXResult2"
                        android:layout_width="wrap_content"
                        android:layout_height="60sp"
                        android:layout_below="@+id/SumXResult1"
                        android:layout_marginLeft="@dimen/margin_sum"
                        android:layout_marginTop="0dp"
                        android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
                        android:gravity="center"
                        android:hint="H2"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/SumXResult3"
                        android:layout_width="wrap_content"
                        android:layout_height="60sp"
                        android:layout_below="@+id/SumXResult2"
                        android:layout_marginLeft="@dimen/margin_sum"
                        android:layout_marginTop="0dp"
                        android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
                        android:gravity="center"
                        android:hint="H3"
                        android:textSize="19sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/LLY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/square"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/LLY1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/SumYResult1"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:layout_marginRight="0dp"
                        android:drawableTop="@drawable/ic_arrow_downward_black_24dp"
                        android:gravity="center"
                        android:hint="V1"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/SumYResult2"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:layout_marginRight="0dp"
                        android:layout_toRightOf="@+id/SumYResult1"
                        android:drawableTop="@drawable/ic_arrow_downward_black_24dp"
                        android:gravity="center"
                        android:hint="V2"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/SumYResult3"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:layout_marginRight="0dp"
                        android:layout_toRightOf="@+id/SumYResult2"
                        android:drawableTop="@drawable/ic_arrow_downward_black_24dp"
                        android:gravity="center"
                        android:hint="V3"
                        android:textSize="19sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/magicCst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/LLY1"
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:hint="@string/magic_cst"
                    android:textColor="@color/black"
                    android:textSize="@dimen/subheading_text_size"
                    android:textStyle="bold" />
            </RelativeLayout>

            <Chronometer
                android:id="@+id/chrono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/LLY"
                android:gravity="center"
                android:textSize="@dimen/normal_text_size"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LL1">

            <com.google.android.gms.ads.AdView
                android:id="@+id/banner_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>