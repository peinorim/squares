<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.SquareActivity"
    tools:showIn="@layout/app_bar_square">

    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/LLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/SumD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/diagonal_sum"
                android:textColor="@color/black"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/LLD1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/SumDResult1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:hint="D1"
                    android:padding="5dp"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/SumDResult2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:hint="D2"
                    android:padding="5dp"
                    android:textSize="19sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/tableContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableLayout
                    android:id="@+id/tabsq33"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:paddingTop="1dp">

                    <TableRow
                        android:id="@+id/tableRow11"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <EditText
                            android:id="@+id/et11"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/square"
                            android:focusableInTouchMode="true"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="3"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/square_text_size"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et12"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/square"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="3"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/square_text_size"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et13"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/square"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="3"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/square_text_size"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <EditText
                            android:id="@+id/et21"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/square"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="3"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/square_text_size"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et22"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/square"
                            android:gravity="center"
                            android:inputType="number"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/square_text_size"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et23"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/square"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="3"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/square_text_size"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow31"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <EditText
                            android:id="@+id/et31"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/square"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="3"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/square_text_size"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et32"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/square"
                            android:gravity="center"
                            android:inputType="number"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/square_text_size"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et33"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/square"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="3"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/square_text_size"
                            android:textStyle="bold" />
                    </TableRow>
                </TableLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/SumContainer"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/SumXResult1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:hint="H1"
                    android:padding="5dp"
                    android:textColor="@color/grey_darken2"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/SumXResult2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/SumXResult1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:hint="H2"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/SumXResult3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/SumXResult2"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:hint="H3"
                    android:textSize="19sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/LLY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/LLY1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/SumYResult1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:hint="V1"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/SumYResult2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:hint="V2"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/SumYResult3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:hint="V3"
                    android:textSize="19sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/magicCst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="10sp"
                android:hint="Magic Cst"
                android:textColor="@color/black"
                android:textSize="@dimen/subheading_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <Chronometer
            android:id="@+id/chrono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/normal_text_size"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>
